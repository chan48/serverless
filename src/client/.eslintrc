{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "parser": "babel-eslint",
  "extends":"eslint:recommended",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
  },
  "env":{
    "browser":true,
    "node":true
  },
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "no-useless-constructor": 0,
    "space-unary-ops": 2,
    "indent": 1,
    "no-var": 2,
    "brace-style": [1, "1tbs", { "allowSingleLine": true }],
    "no-lonely-if": 1,
    "no-unneeded-ternary": 1,
    "no-console": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  },
  "plugins": [
    "react"
  ]
}
